#Kivy(2.0.0)

<DivisorCuenta>:
    f_cantidad: cantPersonas
    GridLayout:
        cols: 2
        padding: 10
        spacing: 10
        
        Label:
            text: 'Cantidad de personas:'
        TextInput:
            id: cantPersonas
            text: "Ingresar el numero de personas que participan en la divisi√≥n"
            multiline: True
            password: False
   
    GridLayout:
        rows: 1
        padding: 10
        Button:
            text: 'listar'
            on_press: root.listarPersonas(cantPersonas)

    GridLayout:
        cols: 3
        Label:
            id: total
            text: ''
        Label:
            id: promedio
            text: ''